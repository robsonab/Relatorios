@model IEnumerable<RelatoriosCongregação.Models.TotaisRelatorio>

@{
    ViewBag.Title = "Totais";
}

<h4>Congregação</h4>

<table class="table table-striped">
    <tr>
        <th width="5em">
            <div style="font-size: 13pt">
                <a href='@Url.Action("Create",  new RouteValueDictionary(new { showAll = false }))'><span class='glyphicon glyphicon-plus-sign' aria-hidden='true'></span></a>    
                <a href='@Url.Action("DetalhadoIndividual",  new RouteValueDictionary(new { pagina = 1 }))'><span class='glyphicon glyphicon-eye-open' aria-hidden='true'></span></a>            
            </div>
        </th>
        <th width="30%">
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            Qtd. Public.
        </th>
        <th >
            @Html.DisplayNameFor(model => model.Horas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Videos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Publicacoes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Revisitas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estudos)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td></td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.QtdPublicadores)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Horas)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Videos)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Publicacoes)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Revisitas)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Estudos)
            </td>
        </tr>
    }

    <tr>
        <th>&nbsp;</th>
        <th>&nbsp;</th>
        <td align="center">
            <b>@Model.Sum(m => m.QtdPublicadores)</b>            
        </td>
        <td align="center">
            <b>@String.Format("{0:N0}", Model.Sum(m => m.Horas))</b>
        </td>
        <td align="center">
            <b>@String.Format("{0:N0}", Model.Sum(m => m.Videos))</b>
        </td>
        <td align="center">
            <b>@String.Format("{0:N0}", Model.Sum(m => m.Publicacoes))</b>
        </td>
        <td align="center">
            <b>@String.Format("{0:N0}", Model.Sum(m => m.Revisitas))</b>
        </td>
        <td align="center">
            <b>@String.Format("{0:N0}", Model.Sum(m => m.Estudos))</b>
        </td>
    </tr>

</table>
